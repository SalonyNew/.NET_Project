@model IEnumerable<Services.ViewModels.UserInfo>;

@{
    ViewData["Title"] = "Profile List";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body, html {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            overflow: hidden; /* Prevent scrolling */
        }

        .navbar {
            background-color: #333;
            color: white;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: fixed; /* Fixed position */
            top: 0; /* Stick to the top */
            width: 100%; /* Occupy full width */
            z-index: 1000; /* Ensure it's above other content */
        }

        .nav-links {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
        }

            .nav-links li {
                margin-right: 20px;
            }

                .nav-links li a {
                    color: white;
                    font-size: 18px;
                    text-decoration: none;
                }

                .nav-links li:last-child {
                    margin-right: 0;
                }

        .container {
            padding-top: 60px; /* Adjust padding to accommodate navbar */
            overflow: hidden; /* Prevent scrolling */
        }

        .profile-container {
            max-width: 350px;
            background-color: #fff;
            padding: 50px;
            border-radius: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: left; /* Align text to the left */
            margin: auto; /* Center horizontally */
            position: relative; /* Relative positioning */
            z-index: 1; /* Ensure it's above other content */
        }

        h2 {
            color: #007bff;
            margin-top: 0; /* Remove default margin */
        }

        .profile-list {
            list-style: none;
            padding: 0;
            margin-top: 0; /* Remove default margin */
        }

        .profile-item {
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
        }

            .profile-item:last-child {
                border-bottom: none;
            }

            .profile-item p {
                margin: 5px 0;
            }

            .profile-item strong {
                display: inline-block;
                width: 150px;
                font-weight: bold;
            }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin: 0 auto 20px;
            background-color: #ccc; /* Placeholder color */
            overflow: hidden; /* Hide overflowing image */
        }

            .profile-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
    </style>
</head>
<body>
    <div class="navbar">
        <ul class="nav-links">
            <li><a asp-controller="Account" asp-action="Dashboard">Home</a></li>
        </ul>
    </div>
    <div class="container">
        <div class="profile-container">
            <h2>Profile</h2>
            <div class="profile-image">
                <img src="\Profile.png" alt="Profile Image">
            </div>
            <ul class="profile-list">
                @foreach (var profile in Model)
                {
                    <li class="profile-item">
                        <p><strong>Name:</strong> @profile.Name</p>
                        <p><strong>Email:</strong> @profile.Email</p>
                        <p><strong>Education:</strong> @profile.Education</p>
                        <p><strong>Work Experience:</strong> @profile.WorkExperience</p>
                        <p><strong>Skills:</strong> @profile.Skills</p>
                        <p><strong>Resume:</strong> @profile.Resume</p>
                    </li>
                }
            </ul>
        </div>
    </div>
</body>
</html>
