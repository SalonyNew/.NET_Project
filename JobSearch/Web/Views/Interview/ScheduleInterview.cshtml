@model Services.ViewModels.InterviewViewModel;

@{
    ViewData["Title"] = "Schedule Interview";
}
@{
    <html>
    <head>
        <style>
            /* wwwroot/css/site.css */

            /* Style for form container */
            .form-container {
                max-width: 400px;
                margin: 0 auto;
                padding: 20px;
                background-color: #f4f4f4;
                border-radius: 5px;
            }

            /* Style for form labels */
            label {
                display: block;
                margin-bottom: 5px;
            }

            /* Style for form input fields */
            .form-control {
                width: 100%;
                padding: 8px;
                margin-bottom: 15px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }

            /* Style for form submit button */
            .btn-primary {
                background-color: #007bff;
                color: #fff;
                padding: 10px 20px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

                .btn-primary:hover {
                    background-color: #0056b3;
                }

            /* Style for validation error messages */
            .text-danger {
                color: #dc3545;
                font-size: 0.8em;
            }


    </style>
    </head>
    <body>
    <h2>Schedule Interview</h2>

        <form asp-controller="Interview" asp-action="ScheduleInterview" method="post">
            <input type="hidden" id="ApplicationId" name="ApplicationId" value="@ViewBag.ApplicationId" />
            <div class="form-group">
                <label asp-for="InterviewDate">Interview Date</label>
                <input asp-for="InterviewDate" class="form-control" type="date" />
                <span asp-validation-for="InterviewDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Time">Interview Time</label>
                <input asp-for="Time" class="form-control" type="time" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location">Interview Location</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Schedule Interview</button>
        </form>

    </body>
    </html>
}
