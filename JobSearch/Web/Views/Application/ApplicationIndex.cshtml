@model IEnumerable<Domain.Models.Application>

@{
    ViewData["Title"] = "Applications";
}

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 18px;
        text-align: left;
    }

        .table th, .table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
        }

        .table thead th {
            background-color: #f2f2f2;
            color: #333;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

    .action-links a {
        color: #007bff;
        text-decoration: none;
        margin: 0 5px;
    }

        .action-links a:hover {
            text-decoration: underline;
        }

    .navbar {
        background-color: #333;
        color: white;
        padding: 10px 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .nav-links {
        list-style: none;
        margin: 0;
        padding: 0;
    }

        .nav-links li {
            display: inline-block;
            margin-right: 20px;
        }

            .nav-links li a {
                color: white;
                font-size: 18px;
                text-decoration: none;
            }

            .nav-links li:last-child {
                margin-right: 0;
            }
</style>

<div class="navbar">
    <ul class="nav-links">
        <li><a asp-controller="Account" asp-action="Dashboard">Home</a></li>
    </ul>
</div>

<h2>Applications</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().PhoneNo)</th>
            <th>@Html.DisplayNameFor(model => model.First().Education)</th>
            <th>@Html.DisplayNameFor(model => model.First().ApplicationDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNo)</td>
                <td>@Html.DisplayFor(modelItem => item.Education)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplicationDate)</td>
                <td class="action-links">
                    <a asp-action="EditApplication" asp-route-applicationId="@item.ApplicationId">Edit</a> |
                    <a asp-action="Details" asp-route-applicationId="@item.ApplicationId">Details</a> |
                    <a asp-action="Delete" asp-route-applicationId="@item.ApplicationId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
